            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textJar6" />

            <TextView
                android:id="@+id/textValue6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </LinearLayout>

        //button wypłaty z datków
        <Button
            android:id="@+id/button_rem_Jar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
