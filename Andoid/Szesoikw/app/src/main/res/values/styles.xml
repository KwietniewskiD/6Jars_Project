<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">#E91E63</item>
        <item name="android:background">#E5E4E2</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ButtonStyle.Add">
        <item name="android:textColor">#CCCFCF</item>
        <item name="android:background">#424242</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>


    </style>

    <style name="ButtonStyle.Rem">
        <item name="android:textColor">#CCCFCF</item>
        <item name="android:background">#006118</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="ButtonStyle.Clean">
        <item name="android:textColor">#CCCFCF</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">#424242</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Napisy">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Napisy.1">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Napisy.2">
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Napisy.3">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
